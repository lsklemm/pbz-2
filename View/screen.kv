#:import Factory kivy.factory.Factory
#:import Window kivy.core.window

<TooltipButton@MDTooltip+Button>
    tooltip_bg_color: [68/256,182/256,235/256,1]

<MyField@MDTextField>
    size_hint_x: None
    height: '50'
    width: '300'
    text_color: "000000"

    required: True
    helper_text: "This field is required"
    helper_text_mode: "on_error"

    color_mode: 'custom'
    line_color_focus: 'c06ef0'

    multiline: False
    background_color: (1, 1, 1)
    background_normal:''







<MainScreen>
    BoxLayout:
        orientation: "vertical"
        adaptive_size: True


        MDTopAppBar:
            title: 'Menu'
            height: 50
            size_hint_y:.2
            md_bg_color: 68/256,182/256,235/256,1
            use_overflow: True
            right_action_items:
                [["credit-card-plus-outline",lambda x: root.open_add_popup(), "Добавить"],
                ["credit-card-edit-outline", lambda x: root.open_update_popup(), "Редактировать"],
                ["credit-card-remove-outline", lambda x: root.open_remove_popup(), "Удалить"],
                ["credit-card-search-outline", lambda x: root.open_search_popup(), "Поиск"]]

        Label:
            id: lab
            height: 400

        GridLayout:
            cols: 4
            size_hint: 1, 1
            spacing:10
            padding:10,150,10,10
            Button:
                text: 'Производственные\n участки'
                background_color:'#44B6EB'
                background_normal:''
                #on_release: root.add_emp()
                on_press: root.to_table_work_area()
                #on_press: root.set_current_4number()
                #on_release: Factory.AddPopup(root.return_controller(), root.return_model()).open()
            Button:
                text: 'Оборудование'
                background_color:'#44B6EB'
                background_normal:''
                on_press: root.to_table_equipment()
#                on_release: Factory.SearchPopup(root.return_controller(), root.return_model()).open()
            Button:
                text: 'Тех осмотры'
                background_color:'#44B6EB'
                background_normal:''
                on_release: root.to_table_tech_inspection()
            Button:
                text: 'Сотрудники'
                background_color:'#44B6EB'
                background_normal:''
                on_release: root.to_table_employee()

# ----------------------- ADD POPUPS -------------------------
<AddPopupEmp@Popup>
    auto_dismiss: False
    title: 'Добавить информацию о сотруднике'
    separator_color: (68/256,182/256,235/256,1)
    size_hint:None,None
    size:(500,550)

    BoxLayout:
        # background color
        canvas.before:
            Color:
                rgb: (1,1,1)
            Rectangle:
                pos: self.pos
                size: self.size

        orientation: "vertical"
        adaptive_size: True

        GridLayout:
            cols: 1
            rows: 1
            size_hint_y:None
            padding:75,0,10,0

            MyField
                id: pet_name_input
                hint_text: 'Табельный номер'
                input_filter: 'int'
                on_text: root.set_employee_number(self.text)
                pos_hint: {"center_x": .5,"center_y":.5}

        GridLayout:
            cols: 1
            rows: 1
            size_hint_y:None
            padding:75,0,10,0
            MyField
                id: pet_name_input
                hint_text: 'ФИО'
                on_text: root.set_employee_fio(self.text)
                pos_hint: {"center_x": .5,"center_y":.5}

        GridLayout:
            cols: 1
            rows: 1
            size_hint_y:None
#            height:50
            padding:75,0,10,0
            MyField
                id: pet_name_input
                hint_text: 'Должность'
                on_text: root.set_employee_job(self.text)
                pos_hint: {"center_x": .5,"center_y":.5}

        GridLayout:
            cols: 1
            rows: 2
            spacing:30
            padding:100,0,100,40
            Button:
                text: 'Добавить'
                background_normal:''
                background_color: (68/256,182/256,235/256,1)
                pos_hint: {"center_x":.5,"center_y":.5}
                on_press: root.add_employee()

            Button:
                text: 'Вернуться в главное меню'
                background_normal:''
                background_color: (68/256,182/256,235/256,1)
                #disabled: True if root.everything() else False
                on_press: root.dismiss()
                pos_hint: {"center_x": .5,"center_y":.5}


